<a href='/'>Home</a> / Messages
<br /><br />
<ul class="collapsible bodytext" data-collapsible="expandable">
<% for (var i = 0; i < messages.length; i++) { %>
  <li>
  <div data-messageid='<%= i %>' class="collapsible-header bodytext1"><div class='title'><%=messages[i].user%></div>
  <i class="material-icons">filter_drama</i>
  <%= messages[i].msg %>
  <br />
  <% if (currentUser === undefined) { %>
  <% } else if (currentUser.name === messages[i].user) { %>
    <small><%= messages[i].createdAt %></small>

    <a href="/messages/<%= messages[i].id %>/edit">Click to edit</a>
  <% } %>
  <a class="modal-trigger" href="#modal<%= messages[i].id %>">Comment</a>
    <div id="modal<%= messages[i].id %>" class="modal">
      <div class="modal-content">
        <p class='title'>Comment:</p>
        <form action="/messages/<%= messages[i].id %>/comments" method="POST" class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <div class="row">
            <div class="input-field col s12">
              <textarea rows="10" cols="40" name="reply" placeholder="Kindly leave your comment here."></textarea>
            </div>
          </div>
          <button class="btn waves-effect waves-light-blue accent-3" type="submit" name="action">Submit
</button>
        </form>
      </div>
    </div>
  </div>
  <% messages[i].comments.forEach( function(comment){ %>
    <div class="collapsible-body bodytext2">
      <i class="tiny material-icons">comment</i>&nbsp;
      <small style="font-weight: bold"><%= comment.writer %></small><br />
      <small><%= comment.reply %></small><br />
      <small class="right-align"><%= comment.createdAt %></small>
    </div>
  <% }) %>
  </li>
  <% } %>
</ul>
