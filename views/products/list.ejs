<% for (var i = 0; i < products.length; i++) { %>
    <div class="row">
            <div class="col s12 m4">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title">Item <%= i+1 %></span>
                  <p>
                    Name: <%= products[i].name %> <br />
                    Description: <%= products[i].description %> <br />
                    Quantity: <%= products[i].quantity %> <br />
                    Price: <%= products[i].price %> <br />
                  </p>
                </div>
                  <a href="#">This is a link</a>
                </div>
                <form action="/products/" method="POST">
                <label>Buy quantity</label>
                <select class="browser-default">
                  <option value="" disabled selected>Choose your option</option>
                  <% for (var j = 0; j < products[i].quantity; j++) { %>
                    <option value="<%=j%>"><%=j%></option>
                    <% } %> </select>
                    <button class="btn waves-effect waves-light brown lighten-3" type="submit" name="action">Submit
                      <i class="material-icons right">send</i>
                    </button>
                  </form>
                  <!-- Modal Trigger -->
  <a class="modal-trigger waves-effect waves-light btn" href="#modal1">Modal</a>

  <!-- Modal Structure -->
  <div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>
                    </div>
                  </div>

              </div>

            </div>

          </div>

  <% } %>
